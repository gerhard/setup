[github]
  user = gitconfig
  token = token
[credential]
  helper = osxkeychain
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
[pack]
  threads = 0
[push]
  default = current
[core]
  excludesfile = /Users/gerhard/.gitignore
