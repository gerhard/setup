[github]
  user = gerhard
[credential]
  helper = osxkeychain
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
[pack]
  threads = 0
[pull]
  rebase = true
[push]
  default = current
[merge]
  tool = vimdiff
  conflictstyle = diff3
[mergetool]
  prompt = false
[diff]
  tool = vimdiff
  conflictstyle = diff3
[difftool]
  prompt = false
[core]
  excludesfile = ~/.gitignore
[commit]
  template = ~/.gitcommit
  verbose = true
